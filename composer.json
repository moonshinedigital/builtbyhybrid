{
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"sirbrillig/phpcs-changed": "^2.10",
		"sirbrillig/phpcs-variable-analysis": "^2.11",
		"wp-cli/i18n-command": "^2.4",
		"wp-coding-standards/wpcs": "^2.3",
		"php-stubs/acf-pro-stubs": "^6.1",
		"php-stubs/wordpress-stubs": "^6.3"
	},
	"scripts": {
		"php:lint": "vendor/bin/phpcs -p -s --ignore=*/app/,*/conf/,*/dist/",
		"php:lint:errors": "vendor/bin/phpcs -p -s --runtime-set ignore_warnings_on_exit 1 --ignore=*/app/,*/conf/,*/dist/",
		"php:lint:autofix": "vendor/bin/phpcbf --ignore=*/app/,*/conf/,*/dist/",
		"php:lint:changed": "vendor/bin/phpcs-changed --git --git-unstaged --ignore=*/app/,*/conf/,*/dist/",
		"make-pot": "wp i18n make-pot . ./dist/languages/moonbase.pot"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
